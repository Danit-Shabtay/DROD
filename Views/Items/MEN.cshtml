@model IEnumerable<DROD.Models.Items>

@{
    ViewData["Title"] = "Men";
}


<!-- Images -->
<div class="container d-flex justify-content-center" style="margin-top:50px">
    <div class="row text-center">

        @foreach (var item in Model)
        {
            <div class="col-sm">
                <img src=@Html.DisplayFor(modelItem => item.Path)
                     alt="en item"
                     style="width:220px; height:300px;">
                <br />
                <p style="color:aliceblue">
                    @Html.DisplayFor(modelItem => item.ItemName) ||
                    @Html.DisplayFor(modelItem => item.Price)$
                </p>
            </div>
        }

        <!-- Sentence-->
        <div class="text-center">
            <font color="white">
                <p class="" style="margin-top:100px">
                    <h1><strong>I'm Sexy and</strong></h1>
                    <h1><strong>I know it</strong></h1>
                </p>
            </font>
        </div>
        <p style="margin-top:400px"></p>
    </div>
</div>


<!-- Sentence-->
<div class="text-center">
    <font color="white">
        <p class="" style="margin-top:50px">
            <h2><strong>The Future Is Here !</strong></h2>
        </p>
    </font>
</div>


<!-- Video -->
<div class="text-center">
    <video width="800" height="400" controls>
        <source src="../imgs/TheFuture1.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>
