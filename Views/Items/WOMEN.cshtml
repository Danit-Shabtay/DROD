@model IEnumerable<DROD.Models.Items>

@{
    ViewData["Title"] = "Women";
}


<!-- Sentence-->
<div class="text-center">
    <font color="white">
        <p class="" style="margin-top:120px">
            <h1><strong>Style is forever</strong></h1>
        </p>
    </font>
</div>

<!-- Images -->
<div class="container d-flex justify-content-center" style="margin-top:50px">
    <div class="row text-center">

        @foreach (var item in Model)
        {
            <div class="col-sm">
                <img src=@Html.DisplayFor(modelItem => item.Path)
                     alt="Women item"
                     style="width:220px; height:300px;">
                <br />
                <p style="color:aliceblue">
                    <strong>
                        @Html.DisplayFor(modelItem => item.ItemName) |
                        @Html.DisplayFor(modelItem => item.Price) $
                    </strong>
                </p>
            </div><br /><hr />
        }
    </div>
</div>

<!-- Sentence-->
<div class="text-center">
    <font color="white">
        <p class="" style="margin-top:50px">
            <h2><strong>Bride Dress - COMING SOON !</strong></h2>
        </p>
    </font>
</div>

<!-- Video -->
<div class="text-center">
    <video width="730" height="410" controls>
